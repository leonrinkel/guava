#!/bin/sh

start() {
	printf "Importing ZFS pools: "
	zpool import -a
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
	printf "Exporting ZFS pools: "
	zpool export -a
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
	stop
	start
}

reload() {
	stop
	start
}

case "$1" in
  start)
  	start
	;;
  stop)
  	stop
	;;
  restart)
  	restart
	;;
  reload)
  	reload
	;;
  *)
	echo "Usage: $0 {start|stop|restart|reload}"
	exit 1
esac

exit $?
